#!/usr/bin/env bash
## Pipemenu - Take screenshots using maim (Leoberbert style üî•)
# Vari√°veis iniciais
MENUS_LIBDIR='/usr/share/archcraft/openbox/menulib'
if ! . "$MENUS_LIBDIR/archcraft.cfg" 2> /dev/null; then
	echo "Error: Failed to locate archcraft.cfg in $MENUS_LIBDIR" >&2
	exit 1
fi
# Preparar nome do arquivo e diret√≥rio
time=$(date +%Y-%m-%d-%H-%M-%S)
geometry=$(xrandr | grep 'current' | head -n1 | cut -d',' -f2 | tr -d '[:blank:],current')
xdg_output="$(command -v xdg-user-dir &>/dev/null && xdg-user-dir PICTURES)"
pictures_dir="${xdg_output:-$HOME/Pictures}"
dir="${pictures_dir}/Screenshots"
file="Screenshot_${time}_${geometry}.png"
# Criar diret√≥rio se n√£o existir
mkdir -p "$dir"
# Notifica√ß√£o e visualiza√ß√£o
notify_view () {
	local notify_cmd_shot='dunstify -u low -h string:x-dunst-stack-tag:obscreenshot -i /usr/share/archcraft/icons/dunst/picture.png'
	$notify_cmd_shot "Copied to clipboard."
	paplay /usr/share/sounds/freedesktop/stereo/screen-capture.oga &>/dev/null &
	viewnior "${dir}/${file}"
	if [[ -e "${dir}/${file}" ]]; then
		$notify_cmd_shot "Screenshot Saved."
	else
		$notify_cmd_shot "Screenshot Deleted."
	fi
}
# Copiar para clipboard
copy_shot () {
	tee "$file" | xclip -selection clipboard -t image/png
}
# Contador
countdown () {
	for sec in $(seq "$1" -1 1); do
		dunstify -t 1000 -h string:x-dunst-stack-tag:screenshottimer -i /usr/share/archcraft/icons/dunst/timer.png "Taking shot in : $sec"
		sleep 1
	done
}
# Modos de captura
shotnow () {
	cd "$dir" && sleep 0.5 && maim -u -f png | copy_shot
	notify_view
}
shot5 () {
	countdown '5'
	sleep 1 && cd "$dir" && maim -u -f png | copy_shot
	notify_view
}
shot10 () {
	countdown '10'
	sleep 1 && cd "$dir" && maim -u -f png | copy_shot
	notify_view
}
shotarea () {
	dunstify -u low "üìê Select Area" "Draw a region to capture"
	cd "$dir" && maim -u -f png -s -b 2 -c 0.35,0.55,0.85,0.25 -l | copy_shot
	notify_view
}
shotwin () {
	dunstify -u low "ü™ü Select Window" "Click on a window to capture"
	win_geometry=$(slop -n -f "%g") || {
		dunstify -u critical "Screenshot cancelled" "No window selected"
		exit 1
	}
	cd "$dir" && maim -u -f png -g "$win_geometry" | copy_shot
	notify_view
}
# Execu√ß√£o
case "$1" in
	--now) shotnow ;;
	--in5) shot5 ;;
	--in10) shot10 ;;
	--area) shotarea ;;
	--win) shotwin ;;
	*)
		menuStart
			menuItem 'üì∏ Screenshot Now' "$0 --now"
			menuItem '‚è± Screenshot in 5s' "$0 --in5"
			menuItem '‚è± Screenshot in 10s' "$0 --in10"
			menuSeparator
			menuItem 'üìê Screenshot Area (Free Selection)' "$0 --area"
			menuItem 'ü™ü Screenshot Window (Click a Window)' "$0 --win"
		menuEnd
		;;
esac
exit 0
